@model crud_asp.netmvcCore.Models.AddStudent
<style>
    #container {
        border-radius: 10px;
        width: 250px;
        display: inline-block;
        background-color: aliceblue;
        color: darkslateblue;
        margin-left: 35%;
        text-align: center;
        border-radius: 13px;
        height: 350px;
        font-size: large;
    }

    .controll {
        display: block;
        /* width: 100%; */
        padding: .375rem .75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: .25rem;
        transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

    }
</style>


<form method="post">
    <h1 style="text-align:center;"> Student Registration</h1>
    <div id="container" style="text-align:center;">
        <div class="mt-3 col-3">
            <label class="form-label">Name</label>
                <input class="controll" type="text" name="Name" asp-for="Name" />
        </div>

        <div class="mt-3 col-3">
            <label>Email</label>           
                <input class="controll" type="email" name="email" asp-for="Email" />
        </div>

        <div class="mt-3 col-3">
            <label>MobileNo</label>
                <input class="controll" type="number" name="MobileNo" asp-for="MobileNo" />
        </div>


        <div class="mt-3 col-3">
            <button class="btn btn-primary justify-content-center" type="submit">Submit</button>
        </div>

    </div>
</form>

   
   
        
       
           
       

         

   

