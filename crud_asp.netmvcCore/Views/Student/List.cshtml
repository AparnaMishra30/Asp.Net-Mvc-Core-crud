@{
}
@model List<crud_asp.netmvcCore.Models.entities.Student>

<h1 style="text-align:center;"> student</h1>
<table class="table">
    <thead>
        <tr>
        <td>Name</td>
        <td>Email</td>
        <td>MobileNo</td>
        <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.MobileNo</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
      
                    <form method="post" asp-action="Delete" asp-route-id="@student.Id" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>