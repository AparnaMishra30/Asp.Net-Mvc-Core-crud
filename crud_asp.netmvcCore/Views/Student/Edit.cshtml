@model crud_asp.netmvcCore.Models.entities.Student

<form method="post">
    <h1 style="text-align:center;"> Student Registration</h1>
    <div id="container">
       <div class="mt-3 col-2">
           <label class="form-label">Id</label>
           <div>
               <input class="controll" name="id" asp-for="Id" readonly/>
           </div>
       </div>

        <div class="mt-3 col-2">
            <label>Name</label>
            <div>
                <input class="controll" type="text" name="Name" asp-for="Name" />
            </div>
        </div>

        <div class="mt-3 col-2">
            <label>Email</label>
            <div>
                <input class="controll" type="email" name="email" asp-for="Email" />
            </div>
        </div>

        <div class="mt-3 col-2">
            <label>Mobile No</label>
            <div>
                <input class="controll" type="number" name="MobileNo" asp-for="MobileNo" />
            </div>
        </div>


        <div class="mt-3 col-2">
            <button class="btn btn-primary justify-content-center" type="submit">Submit</button>
        </div>

    </div>
</form>
